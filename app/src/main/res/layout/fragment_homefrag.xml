                    android:ellipsize="end"
                    android:fontFamily="@font/montseerat"

                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Search for Brand ,Category ,Product"
                    android:textColor="#7A7A7A"
                    android:textSize="13dp"

                    />

