<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:gravity="center"

    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="wrap_content"
        android:indeterminateTint="#301A93"
        android:visibility="gone"
        android:layout_height="wrap_content" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/connectionwhoops"/>


    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:fontFamily="@font/montseerat"
        android:text=""
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btn_retry"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#301A93"
        android:text="Retry"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/rect_stroke"
        android:layout_height="38dp" />


    <TextView
        android:id="@+id/tv_try_later"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="#301A93"
        android:fontFamily="@font/montseerat"
        android:layout_marginTop="10dp"
        android:text="Try Again Latter"/>

</LinearLayout>