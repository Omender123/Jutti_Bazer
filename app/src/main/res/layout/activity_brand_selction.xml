<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_from_list"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:tint="@color/white"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/back_arrow_white"/>
        <TextView
            android:id="@+id/category_nam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="______"
            android:padding="10dp"
            android:layout_weight="1"
            android:textSize="17dp"

            android:textColor="@color/white"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <ImageView
        android:id="@+id/nores"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        android:background="#F5F5F7"

        android:layout_height="match_parent"
        android:src="@drawable/nodata"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C2BDBD"
        android:padding="3dp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:textColor="@color/white"
        android:text=" Select Brand "/>
        <TextView
            android:id="@+id/seealll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Brands"
            android:background="@drawable/rect_stroke"
            android:paddingLeft="8dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"

            android:textSize="17dp"
            android:layout_marginRight="6dp"

            android:textColor="@color/white"
            tools:ignore="MissingConstraints" />


    </LinearLayout>
<LinearLayout
    android:id="@+id/yesresult"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_brand_selction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>
</LinearLayout>