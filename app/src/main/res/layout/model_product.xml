<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="6dp"
    android:id="@+id/llproduct"
    android:layout_marginRight="6dp"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:layout_marginBottom="3dp"
    app:cardCornerRadius="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:elevation="1dp"
                        app:cardCornerRadius="8dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:id="@+id/img"
                                        android:layout_width="140dp"
                                        android:layout_height="140dp"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitXY"
                                        />
                                    <ProgressBar
                                        android:id="@+id/pb"
                                        android:layout_width="wrap_content"
                                        android:layout_centerInParent="true"


                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:indeterminateTint="@color/colorPrimaryDark"/>




                                </RelativeLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="4dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginBottom="3dp"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:id="@+id/ll_women"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_marginLeft="8dp"
                                        android:paddingLeft="6dp"
                                        android:paddingRight="6dp"
                                        android:visibility="gone"
                                        android:paddingTop="2dp"
                                        android:paddingBottom="2dp"
                                        android:backgroundTint="@color/womer"
                                        android:background="@drawable/rect_stroke"

                                        android:orientation="horizontal">
                                        <TextView
                                            android:id="@+id/tv_cat"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="1dp"
                                            android:layout_toRightOf="@+id/a"
                                            android:text="Women"

                                            android:textColor="#fff"

                                            android:textSize="10sp" />

                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/ll_men"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_marginLeft="8dp"
                                        android:paddingLeft="6dp"
                                        android:paddingRight="6dp"
                                        android:visibility="gone"
                                        android:gravity="right"
                                        android:paddingTop="2dp"
                                        android:paddingBottom="2dp"
                                        android:backgroundTint="@color/men"
                                        android:background="@drawable/rect_stroke"

                                        android:orientation="horizontal">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="1dp"
                                            android:layout_toRightOf="@+id/a"

                                            android:text="Men"
                                            android:textColor="#fff"

                                            android:textSize="10sp" />

                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/ll_kid"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_marginLeft="8dp"
                                        android:paddingLeft="6dp"
                                        android:visibility="gone"
                                        android:paddingRight="6dp"
                                        android:paddingTop="2dp"
                                        android:paddingBottom="2dp"
                                        android:backgroundTint="@color/kids"
                                        android:background="@drawable/rect_stroke"

                                        android:orientation="horizontal">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="1dp"
                                            android:layout_toRightOf="@+id/a"

                                            android:text="Kids"
                                            android:textColor="#fff"

                                            android:textSize="10sp" />

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                        android:fontFamily="@font/open_sans"
                                        android:layout_marginTop="3dp"
                                        android:layout_marginBottom="0dp"

                                        android:text="Classical Jutti"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="15dp"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:id="@+id/seller"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                        android:fontFamily="@font/open_sans"
                                        android:layout_marginTop="3dp"
                                        android:layout_marginBottom="0dp"

                                        android:text=""
                                        android:textColor="@color/colorAccent"
                                        android:textSize="11dp"
                                      />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:visibility="gone">

                                        <TextView
                                            android:id="@+id/description"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="4dp"
                                            android:layout_marginTop="2dp"
                                            android:layout_marginBottom="2dp"
                                            android:layout_weight="1"
                                            android:text="Product"
                                            android:textColor="#2A2A2A"
                                            android:textSize="12dp" />

                                        <TextView
                                            android:id="@+id/quality"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="3dp"
                                            android:layout_marginRight="10dp"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="6dp"
                                        android:layout_height="wrap_content"

                                        android:textSize="10dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="4dp"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:orientation="horizontal">

                                                <LinearLayout
                                                    android:id="@+id/llprice"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"


                                                    >

                                                    <TextView
                                                        android:id="@+id/tv_product_price"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:text=""
                                                        android:fontFamily="@font/open_sans"
                                                        android:textColor="@color/black"
                                                        android:textSize="15sp"
                                                        android:textStyle="bold"
                                                        app:fontFamily="@font/open_sans" />


                                                </LinearLayout>


                                                <LinearLayout
                                                    android:id="@+id/llpricemrp"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_vertical"

                                                    android:layout_marginLeft="8dp"
                                                    android:paddingLeft="6dp"
                                                    android:paddingRight="6dp"
                                                    android:backgroundTint="#54F44336"
                                                    android:background="@drawable/rect_stroke"

                                                    android:orientation="horizontal">

                                                    <RelativeLayout
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content">


                                                        <LinearLayout
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:layout_centerInParent="true"

                                                            android:gravity="clip_horizontal"
                                                            android:orientation="horizontal">

                                                            <TextView
                                                                android:id="@+id/a"
                                                                android:layout_width="wrap_content"
                                                                android:layout_height="wrap_content"


                                                                android:fontFamily="@font/open_sans"
                                                                android:text="MRP "

                                                                android:textSize="10sp"
                                                                app:fontFamily="@font/poppins" />

                                                            <TextView
                                                                android:id="@+id/tv_product_price_mrp"
                                                                android:layout_width="wrap_content"
                                                                android:layout_height="wrap_content"
                                                                android:layout_marginLeft="1dp"
                                                                android:layout_toRightOf="@+id/a"
                                                                android:fontFamily="@font/open_sans"
                                                                android:text=""

                                                                android:textSize="10sp" />
                                                        </LinearLayout>

                                                    </RelativeLayout>
                                                </LinearLayout>

                                                <TextView
                                                    android:id="@+id/tv_percentage"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginLeft="8dp"
                                                    android:layout_toRightOf="@+id/a"
                                                    android:fontFamily="@font/poppins"
                                                    android:text=""
                                                    android:visibility="gone"
                                                    android:textColor="#8BC34A"
                                                    android:textSize="15sp"

                                                    />

                                            </LinearLayout>

                                        </LinearLayout>



                                        <LinearLayout
                                            android:id="@+id/ll_counter"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:visibility="gone">

                                            <TextView
                                                android:id="@+id/tv_minus"
                                                android:layout_width="30dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:background="#009688"
                                                android:gravity="center"
                                                android:padding="5dp"
                                                android:text="-"
                                                android:textColor="@color/white"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/tv_count"
                                                android:layout_width="35dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:background="@drawable/rect_stroke"
                                                android:gravity="center"
                                                android:inputType="number"
                                                android:maxEms="2"
                                                android:maxLength="2"
                                                android:maxLines="1"
                                                android:padding="5dp"
                                                android:text="1" />

                                            <TextView
                                                android:id="@+id/tv_add"
                                                android:layout_width="30dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:background="#009688"
                                                android:gravity="center"
                                                android:padding="5dp"
                                                android:text="+"
                                                android:textColor="@color/white"
                                                android:textStyle="bold" />

                                        </LinearLayout>

                                    </LinearLayout>
                                    <TextView
                                        android:id="@+id/qty"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginTop="5dp"

                                        android:clickable="true"
                                        android:fontFamily="@font/open_sans"
                                        android:focusable="true"
                                        android:gravity="center"
                                        android:layout_marginLeft="4dp"

                                        android:text="MOQ. "
                                        android:textColor="#666666"
                                        android:textSize="10dp"
                                         />

                                </LinearLayout>

                            </LinearLayout>


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>

            <com.skydoves.androidribbon.ShimmerRibbonView
                android:id="@+id/rbn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:alpha="0.8"
                app:shimmer_base_alpha="1.0"
                android:visibility="gone"
                app:shimmer_duration="2200"
                app:shimmer_highlight_alpha="0.5"
                app:shimmer_ribbon_drawable="@drawable/ribbon_popular"
                app:shimmer_ribbon_padding_bottom="3dp"
                app:shimmer_ribbon_padding_top="3dp"
                app:shimmer_ribbon_textColor="@android:color/white"
                app:shimmer_ribbon_textStyle="bold" />


        </RelativeLayout>

    </LinearLayout>







</androidx.cardview.widget.CardView>